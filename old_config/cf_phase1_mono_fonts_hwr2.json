{
    "name": "Phase1_mono_fonts_hwr2",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "super_computer":false,
    "data_loader": {
        "data_set_name": "FontDataset",

        "data_dir": "data",
        "batch_size": 16,
        "shuffle": true,
        "num_workers": 5,

        "img_height": 64,
        "fontfile": "mono_fonts.txt",
        "char_file": "data/lotr_char_set.json",
        "center_pad": false
    },
    "validation": {
        "shuffle": false,
        "batch_size": 32
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.001,
        "weight_decay": 0
    },
    "loss": {
        "recog": "CTCLoss"
    },
    "loss_weights": {
        "recog": 1
    },
    "loss_params": 
        {
        },
    "metrics": [],
    "trainer": {
        "class": "HWWithStyleTrainer",
        "iterations": 100000,
        "save_dir": "../saved/",
        "val_step": 500,
        "save_step": 5000,
        "save_step_minor": 250,
        "log_step": 100,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "skip_auto": true,


        "use_learning_schedule": false
    },
    "arch": "HWWithStyle", 
    "model": {
        "num_class": 78
    }
}
